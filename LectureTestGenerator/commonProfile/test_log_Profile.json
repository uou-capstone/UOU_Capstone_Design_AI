{
    "type": "object",
    "description": "시험 진행 중 생성된 개별 문제의 평가 및 피드백 로그를 담는 객체",
    "properties": {
      "evaluation_items": {
        "type": "array",
        "description": "각 문제에 대한 채점 결과와 피드백을 포함한 리스트. 문항 수는 가변적임.",
        "items": {
          "type": "object",
          "properties": {
            "question_id": {
              "type": "integer",
              "description": "문제의 고유 번호 또는 순번"
            },
            "result_status": {
              "type": "string",
              "enum": ["Correct", "Incorrect", "Partial_Correct"],
              "description": "채점 결과 상태 (정답, 오답, 부분 점수)"
            },
            "question_content": {
              "type": "string",
              "description": "사용자에게 제시된 문제의 원본 텍스트"
            },
            "user_response": {
              "type": "string",
              "description": "사용자가 입력하거나 선택한 답안"
            },
            "related_topic": {
              "type": "string",
              "description": "해당 문제가 다루는 핵심 주제 또는 개념"
            },
            "feedback_message": {
              "type": "string",
              "description": "AI가 생성한 채점 근거 및 피드백 메시지"
            }
          },
          "required": [
            "question_id",
            "result_status",
            "question_content",
            "user_response",
            "related_topic",
            "feedback_message"
          ]
        }
      }
    },
    "required": ["evaluation_items"]
  }