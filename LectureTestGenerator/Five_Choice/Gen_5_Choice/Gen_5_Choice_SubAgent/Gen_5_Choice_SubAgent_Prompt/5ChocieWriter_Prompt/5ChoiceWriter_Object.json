{
    "type": "object",
    "description": "생성된 5지선다 문제 세트의 구조를 정의하는 객체",
    "properties": {
      "mcq_problems": {
        "type": "array",
        "description": "생성된 개별 5지선다 문제들의 리스트",
        "items": {
          "type": "object",
          "properties": {
            "id": {
              "type": "integer",
              "description": "문제의 고유 번호 또는 순번"
            },
            "question_content": {
              "type": "string",
              "description": "사용자에게 제시될 문제의 발문(Stem) 텍스트"
            },
            "options": {
              "type": "array",
              "description": "5개의 선택지 리스트",
              "minItems": 5,
              "maxItems": 5,
              "items": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string",
                    "enum": ["1", "2", "3", "4", "5"],
                    "description": "선택지 번호"
                  },
                  "content": {
                    "type": "string",
                    "description": "선택지 내용"
                  },
                  "intent": {
                    "type": "string",
                    "description": "해당 선택지의 출제 의도 (정답인 이유 혹은 오답 유도를 위한 함정 논리)"
                  }
                },
                "required": ["id", "content", "intent"]
              }
            },
            "correct_answer": {
              "type": "string",
              "enum": ["1", "2", "3", "4", "5"],
              "description": "정답 선택지의 번호 (options의 id와 일치해야 함)"
            },
            "intent_diagnosis": {
              "type": "string",
              "description": "문제 전체의 출제 의도 및 학습 진단 가이드"
            }
          },
          "required": [
            "id",
            "question_content",
            "options",
            "correct_answer",
            "intent_diagnosis"
          ],
          "propertyOrdering": [
            "id",
            "question_content",
            "options",
            "correct_answer",
            "intent_diagnosis"
          ]
        }
      }
    },
    "required": [
      "mcq_problems"
    ],
    "propertyOrdering": [
      "mcq_problems"
    ]
  }