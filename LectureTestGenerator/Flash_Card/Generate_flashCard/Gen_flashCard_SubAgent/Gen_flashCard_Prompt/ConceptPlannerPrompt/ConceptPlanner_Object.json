{
    "type": "object",
    "properties": {
      "planning_strategy": {
        "type": "string",
        "description": "전체적인 출제 전략 요약 (예: 'Policy Gradient의 유도 과정을 중심으로 3문제, 개념 확인 2문제 배분')"
      },
      "planned_items": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "id": {
              "type": "integer",
              "description": "카드 식별 번호"
            },
            "target_topic": {
              "type": "string",
              "description": "다룰 핵심 개념 (예: V&V, Eigenvalue)"
            },
            "intent_type": {
              "type": "string",
              "enum": ["Definition", "Comparison", "Causal_Relationship", "Application_Scenario"],
              "description": "질문의 의도. 단순 정의인지, 비교인지, 인과관계인지 등을 명시"
            },
            "complexity_level": {
              "type": "string",
              "enum": ["Basic", "Intermediate", "Advanced"],
              "description": "난이도 설정 (Profile의 proficiency_level 고려)"
            },
            "source_reference_hint": {
              "type": "string",
              "description": "강의 자료 내의 참조 위치 힌트나 핵심 문장 발췌 (Writer가 Hallucination 없이 작성하도록 돕는 가이드)"
            }
          },
          "required": ["id", "target_topic", "intent_type", "complexity_level"]
        }
      }
    },
    "required": ["planning_strategy", "planned_items"]
  }