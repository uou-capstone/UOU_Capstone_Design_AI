{
    "type": "object",
    "properties": {
      "evaluation_items": {
        "type": "array",
        "description": "턴별 평가 항목 리스트",
        "items": {
          "type": "object",
          "properties": {
            "turn_id": {
              "type": "string",
              "description": "턴 번호 (예: '1', '2'...) 또는 최후 변론인 경우 'Final'"
            },
            "result_status": {
              "type": "string",
              "description": "발화의 질적 판정 (예: 'Effective', 'Weak', 'Critical_Fail', 'Pass')"
            },
            "agent_context": {
              "type": "string",
              "description": "해당 턴에서 사용자가 답변해야 했던 에이전트의 질문이나 반박 내용"
            },
            "user_response": {
              "type": "string",
              "description": "사용자 발화 내용"
            },
            "related_topic": {
              "type": "string",
              "description": "해당 턴에서 논의된 세부 주제"
            },
            "evaluation_detail": {
              "type": "object",
              "description": "평가 상세 정보",
              "properties": {
                "score_now": {
                  "type": "integer",
                  "description": "해당 턴 종료 시점의 누적 점수"
                },
                "score_delta": {
                  "type": "integer",
                  "description": "점수 변동량"
                },
                "reason": {
                  "type": "string",
                  "description": "평가 사유"
                }
              },
              "required": [
                "score_now",
                "score_delta",
                "reason"
              ]
            }
          },
          "required": [
            "turn_id",
            "result_status",
            "agent_context",
            "user_response",
            "related_topic",
            "evaluation_detail"
          ]
        }
      }
    },
    "required": [
      "evaluation_items"
    ]
  }